<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintTop_toBottomOf="@+id/txtInfo"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/txtAg"/>
    <TextView
            android:text="Select your birthdate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/txtInfo"
            android:textStyle="bold"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/cal"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/cal"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Your Age is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAg" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/cal" android:layout_marginBottom="101dp"/>
</android.support.constraint.ConstraintLayout>